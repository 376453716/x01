<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xh.dao.MessageDao">
    <resultMap id="user1" type="com.xh.Entity.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="birthday" column="birthday"/>
    </resultMap>

    <select id="getEntity" parameterType="Long" resultMap="user1">
        select id,name,birthday from x_user where id=#{id}
    </select>

    <update id="updateEntity" parameterType="com.xh.Entity.User">
        update x_user set birthday = #{birthday},name=#{name} where id=#{id}
    </update>

    <update id="saveEntity" parameterType="com.xh.Entity.User">
      insert x_user (id,name,birthday) values (#{id},#{name},#{birthday})
    </update>

    <select id="listEntity" resultMap="user1">
        select id,name,birthday from x_user
    </select>

</mapper>