<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xh.dao.MessageDao">
    <resultMap id="user1" type="com.xh.Entity.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="birthday" column="birthday"/>
    </resultMap>

    <select id="getUser" parameterType="String" resultMap="user1">
        select id,name,birthday from user where id=#{id}
    </select>

    <update id="update" parameterType="com.xh.Entity.User">
        update user set birthday = #{birthday},name=#{name} where id=#{id}
    </update>

    <update id="insert" parameterType="com.xh.Entity.User">
      insert user (id,name,birthday) values (#{id},#{name},#{birthday})
    </update>

    <select id="getAll" resultMap="user1">
        select * from user;
    </select>

</mapper>